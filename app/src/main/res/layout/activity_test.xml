<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/para_a"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="37"
            android:textSize="10sp"/>

        <EditText
            android:id="@+id/para_a_in"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="+" />

        <EditText
            android:id="@+id/para_b"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="23"
            android:textSize="10sp"/>

        <EditText
            android:id="@+id/para_b_in"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="+"/>
        <EditText
            android:id="@+id/para_c"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="59"
            android:textSize="10sp"/>

        <EditText
            android:id="@+id/para_c_in"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="+"/>

        <EditText
            android:id="@+id/para_d"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="271"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/para_d_in"
            android:layout_width="40dp"
            android:layout_height="40dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text=" =" />

        <EditText
            android:id="@+id/result"
            android:layout_width="40dp"
            android:layout_height="40dp" />


    </LinearLayout>
    <TextView
        android:id="@+id/show"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</LinearLayout>